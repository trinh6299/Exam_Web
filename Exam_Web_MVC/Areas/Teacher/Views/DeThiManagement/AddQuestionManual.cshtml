
@{
    ViewBag.Title = "AddQuestionManual";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Thêm Câu Hỏi Cho Đề "@ViewBag.TenDeThi"</h2>
        @Html.ActionLink("Quay lại", "Details", new { id = (int)Session["DeThiID"] }, new { @class = "btn btn-secondary" })
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Nội dung câu hỏi
                </th>
                <th>
                    Hành động
                </th>
            </tr>
            @if (ViewBag.CauHois != null)
            {
                int countRow = 0;
                foreach (var item in ViewBag.CauHois)
                {
                    <tr>
                        @{ countRow++;}
                        <td>@countRow</td>
                        <td>@item.NoiDungCauHoi</td>
                        <td>
                            @Html.ActionLink("Thêm", "AddQuestion", new { id = item.CauHoiID }, new { @class = "btn btn-primary" })
                        </td>
                    </tr>
                }
            }

        </table>
    </div>
</div>



