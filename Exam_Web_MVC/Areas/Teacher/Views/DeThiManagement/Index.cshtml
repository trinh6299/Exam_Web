
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Danh sách đề thi</h2>
        <a class="btn btn-primary rounded-pill" href="@Url.Action("Create","DeThiManagement")">Thêm Đề</a>
        @*@Html.ActionLink("Thêm đề", "Create", null, new { @class = "btn btn-primary" })*@
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Tên đề thi
                </th>
                <th>
                    Thời gian làm bài
                </th>
                <th>
                    Thời gian bắt đầu
                </th>
                <th>
                    Loại đề
                </th>
                <th>
                    Người tạo đề
                </th>
                <th>
                    Tên môn học
                </th>
                <th>
                    Hành động
                </th>
            </tr>

            @foreach (var item in ViewBag.ListDeThi)
            {
                <tr>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.TenDeThi)*@
                        @item.TenDeThi
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.ThoiGianLamBai)*@
                        @item.ThoiGianLamBai
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.ThoiGianBatDauLamBai)*@
                        @item.ThoiGianBatDauLamBai
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.LoaiDe)*@
                        @item.LoaiDe
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.GiaoVien.TenGV)*@
                        @item.GiaoVien.TenGV
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.MonHoc.TenMH)*@
                        @item.MonHoc.TenMH
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","DeThiManagement",new { id=item.DeThiID})" style="font-size:22px;"><i class="far fa-edit" title="Sửa Đề Thi"></i></a>
                        <a href="@Url.Action("Details","DeThiManagement",new { id=item.DeThiID})" style="font-size:22px;"><i class="fas fa-info-circle" title="Chi Tiết Đề Thi"></i></a>
                        <a href="@Url.Action("Deleta","DeThiManagement",new { id=item.DeThiID})" style="font-size:22px;"><i class="far fa-trash-alt" title="Xóa Đề Thi"></i></a>
                        
    
                        @*@Html.ActionLink("Sửa", "Edit", new { id = item.DeThiID }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.DeThiID }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.DeThiID }, new { @class = "btn btn-danger", onclick = "return confirm('Bạn có chắc chắn muốn xóa không?')" })*@
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
