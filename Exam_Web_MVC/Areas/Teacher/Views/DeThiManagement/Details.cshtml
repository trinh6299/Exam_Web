@model Exam_Web_Core.DeThi
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Chi tiết đề</h2>
        @*@Html.ActionLink("Sửa đề", "Edit", new { id = Model.DeThiID }, new { @class = "btn btn-primary" })*@
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
    </div>
    <div class="card-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    Tên đề
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TenDeThi)
                </dd>

                <dt>
                    Thời gian làm bài
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ThoiGianLamBai)
                </dd>
                <dt>
                    Loại đề
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LoaiDe)
                </dd>
                <dt>
                    Thời gian bắt đầu làm bài
                </dt>


                @{
                    if (Model.LoaiDe != "final test")
                    {


                        <dd>
                            Không giới hạn
                        </dd>
                    }
                    else
                    {
                        <dd>
                            @Html.DisplayFor(model => model.ThoiGianBatDauLamBai)
                        </dd>
                    }
                }
                <dt>
                    Người ra đề
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GiaoVien.TenGV)
                </dd>

                <dt>
                    Tên môn học
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MonHoc.TenMH)
                </dd>

            </dl>
            <p>
                @Html.ActionLink("Thêm câu hỏi tự động", "AddQuestionAuto", new { id = Model.DeThiID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Thêm câu hỏi thủ công", "AddQuestionManual", new { id = Model.DeThiID }, new { @class = "btn btn-primary" })
            </p>
        </div>
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Nội Dung Câu Hỏi
                </th>
                <th>
                    Độ Khó
                </th>
                <th>
                    Hành động
                </th>
            </tr>
            @{ int countRow = 0;}
            @foreach (var item in ViewBag.CauHois)
            {
                <tr>
                    @{ countRow++;}
                    <td>@countRow</td>
                    <td>@item.NoiDungCauHoi</td>
                    <td>@item.DoKho.TenDoKho</td>
                    <td>@Html.ActionLink("Xóa", "RemoveQuestion", new { id = item.CauHoiID }, new { @class = "btn btn-primary" })</td>
                </tr>
            }
        </table>

    </div>
</div>
