@model IEnumerable<Exam_Web_Core.HocSinh>
@{
    ViewBag.Title = "Danh sách học sinh";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Danh Sách Học Sinh</h2>
        <a class="btn btn-primary rounded-pill" href="@Url.Action("Create","HocSinhManagement")">Thêm Học Sinh Mới</a>
        @*@Html.ActionLink("Thêm học sinh mới", "Create",null,new { @class="btn btn-primary"})*@
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Tên học sinh
                </th>
                <th>
                    Ngày sinh
                </th>
                <th>
                    Giới tính
                </th>
                <th>
                    Email
                </th>
                <th>
                    Username
                </th>
                <th>
                    Hành động
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenHS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgaySinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GioiTinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaiKhoan.UserName)
                    </td>
                    <td>
                        <div class="text-center">
                            <a href="@Url.Action("Edit","HocSinhManagement",new { id=item.HocSinhID})"><i class="far fa-edit" style="font-size:22px;"></i></a>
                            <a href="@Url.Action("Delete","HocSinhManagement",new { id=item.HocSinhID})"><i class="far fa-trash-alt" style="font-size:22px;" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')"></i></a>
                        </div>
                        

                        @*@Html.ActionLink("Sửa", "Edit", new { id = item.HocSinhID }, new { @class="btn btn-primary"}) 
                        @Html.ActionLink("Xóa", "Delete", new { id = item.HocSinhID }, new { @class="btn btn-danger", onclick = "return confirm('Bạn có chắc chắn muốn xóa không?')" })*@
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


