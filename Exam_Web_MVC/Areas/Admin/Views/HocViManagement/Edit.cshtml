@model Exam_Web_Core.HocVi

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card"> 
    <div class="card-header">
        <h2>Sửa học vị</h2>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.HocViID)

            <div class="form-group">
                <div class = "control-label col-md-2">Tên học vị</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenHocVi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenHocVi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Quay lại", "Index",null,new { @class="btn btn-secondary"})
                </div>
            </div>
        </div>
        }
    </div>
</div>



