@model IEnumerable<Exam_Web_Core.HocVi>

@{
    ViewBag.Title = "Danh sách học vị";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Danh sách học vị</h2>
        @Html.ActionLink("Thêm học vị", "Create", null, new { @class = "btn btn-primary" })
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Tên học vị
                </th>
                <th>
                    Hành động
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenHocVi)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.HocViID },new { @class="btn btn-primary"}) 
                        @Html.ActionLink("Xóa", "Delete", new { id = item.HocViID }, new { @class="btn btn-danger", onclick = "return confirm('Bạn có chắc chắn muốn xóa không?')" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>


