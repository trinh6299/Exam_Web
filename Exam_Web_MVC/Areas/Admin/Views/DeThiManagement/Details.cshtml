@model Exam_Web_Core.DeThi

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Chi Tiết Đề Thi</h2>
        <a class="btn btn-secondary rounded-pill">Quay Lại</a>
        @*@Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })*@
    </div>
    <div class="card-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    Tên đề
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TenDeThi)
                </dd>

                <dt>
                    Thời gian làm bài
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ThoiGianLamBai)
                </dd>

                <dt>
                    Thời gian bắt đầu làm bài
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ThoiGianBatDauLamBai)
                </dd>

                <dt>
                    Loại đề
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LoaiDe)
                </dd>

                <dt>
                    Người ra đề
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GiaoVien.TenGV)
                </dd>

                <dt>
                    Tên môn học
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MonHoc.TenMH)
                </dd>

            </dl>
            <p>
                <a class="btn btn-primary rounded-pill" href="@Url.Action("AddQuestionAuto","DeThiManagement",new { id=Model.DeThiID})">Thêm Câu Hỏi Tự Động</a>
                <a class="btn btn-primary rounded-pill" href="@Url.Action("AddQuestionManual","DeThiManagement",new { id=Model.DeThiID})">Thêm Câu Hỏi Thủ Công</a>

                @*@Html.ActionLink("Thêm câu hỏi tự động", "AddQuestionManually", new { id = Model.DeThiID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Thêm câu hỏi thủ công", "AddQuestionManually", new { id = Model.DeThiID }, new { @class = "btn btn-primary" })*@
            </p>
        </div>
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Nội dung câu hỏi
                </th>
                <th>
                    Hành động
                </th>
            </tr>
            @{ int countRow = 0;}
            @foreach (var item in ViewBag.CauHois)
            {
                <tr>
                    @{ countRow++;}
                    <td>@countRow</td>
                    <td>@item.NoiDungCauHoi</td>
                    <td>
                        <div class="text-center">
                            <a href="@Url.Action("RemoveQuestion","DeThiManagement",new { id=item.CauHoiID})"><i class="far fa-trash-alt" style="font-size:22px;" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')"></i></a>
                        </div>
                    </td>
                    @*<td>@Html.ActionLink("Xóa","RemoveQuestion",new { id=item.CauHoiID},new { @class="btn btn-primary"})</td>*@
                </tr>
            }
        </table>

    </div>
</div>



