@model Exam_Web_Core.MonHoc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Thêm Môn Học</h2>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="control-label col-md-2">Tên môn học</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenMH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenMH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm Môn Học" class="btn btn-primary rounded-pill" />
                    <a class="btn btn-secondary" href="@Url.Action("Index","MonHocManagement")">Quay Lại</a>
                </div>
            </div>
            @*<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Quay lại", "Index",null,new { @class="btn btn-secondary"})
                </div>
            </div>*@
        </div>
        }

        <div>
        </div>
    </div>
</div>