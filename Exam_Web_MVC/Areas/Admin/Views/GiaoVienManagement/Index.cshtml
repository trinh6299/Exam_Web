@model IEnumerable<Exam_Web_Core.GiaoVien>

@{
    ViewBag.Title = "Danh sách giáo viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h2>Danh sách giáo viên</h2>
        <a class="btn btn-primary rounded-pill" href="@Url.Action("Create","GiaoVienManagement")">Thêm Giáo Viên</a>
        @*@Html.ActionLink("Thêm giáo viên", "Create",null,new { @class="btn btn-primary"})*@
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Tên giáo viên
                </th>
                <th>
                    Ngày sinh
                </th>
                <th>
                    Giới tính
                </th>
                <th>
                    Email
                </th>
                <th>
                    Học vị
                </th>
                <th>
                    Bộ môn
                </th>
                <th>
                    Username
                </th>
                <th>
                    Hành động
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenGV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgaySinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GioiTinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HocVi.TenHocVi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonHoc.TenMH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaiKhoan.UserName)
                    </td>
                    <td>
                        <div class="text-center">
                            <a href="@Url.Action("Edit","GiaoVienManagement",new { id=item.GiaoVienID})"><i class="far fa-edit" style="font-size:22px;" title="Sửa Thông Tin Giáo Viên"></i></a>
                            <a href="@Url.Action("Delete","GiaoVienManagement",new { id=item.GiaoVienID})" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')"><i class="far fa-trash-alt" style="font-size:22px;" title="Xóa Giáo Viên"></i></a>
                        </div>

                        @*@Html.ActionLink("Sửa", "Edit", new { id = item.GiaoVienID }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.GiaoVienID }, new { @class = "btn btn-danger", onclick = "return confirm('Bạn có chắc chắn muốn xóa không?')" })*@
                    </td>
                </tr>
            }

        </table>

    </div>
</div>

