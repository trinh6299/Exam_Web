@using Exam_Web_Core
@model TaiKhoan
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Đăng Nhập</title>
    <link href="~/Assets/admin/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
    <style>
        * {
            font-family: sans-serif;
        }
    </style>
</head>
<body style="background-image:url(../../Assets/Admin/images/login_background.jpg);">
    <div id="layoutAuthentication" class="align-middle">
        <div id="layoutAuthentication_content" class="d-flex align-items-center">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class=" col-12 col-sm-8 col-lg-4">
                        <div class="card shadow-lg border-0 rounded-lg mt-5" style="background-color: rgba(255,255,255,0.7)">
                            <div class="card-header" style="background-color:transparent;"><h3 class="text-center font-weight-normal my-1" style="color:#003366; "><i class="fas fa-book"></i> ĐĂNG NHẬP</h3></div>
                            <div class="card-body" style="background-color: transparent;">
                                @*@using (Html.BeginForm("Index", "Login", FormMethod.Post))*@

                                <form method="post">
                                    <div class="form-group">
                                        <label class="mb-1" for="inputEmailAddress" style="font-weight:600; color:#003366;">Tên Tài Khoản</label>

                                        @* @Html.TextBoxFor(model => model.UserName, new { @class = "form-control py-4", @placeholder = "Nhập tên tài khoản" })*@
                                        <input type="text" class="form-control py-4 rounded-pill" placeholder="Nhập tên tài khoản" name="UserName" style="border-radius:10px;" />
                                    </div>
                                    <div class="form-group">
                                        <label class="mb-1" for="inputPassword" style="font-weight:600; color:#003366;">Mật Khẩu</label>
                                        @*@Html.TextBoxFor(model => model.Password, new { @class = "form-control py-4", @placeholder = "Nhập password của bạn" })*@
                                        <input type="password" class="form-control py-4 rounded-pill" placeholder="Nhập password của bạn" name="Password" style="border-radius:10px;" />
                                    </div>
                                    <div class="form-group d-flex align-items-center justify-content-center mt-4 mb-0">
                                        <button class="btn rounded-pill" style="background-color:#004080; color:white;" type="submit">Đăng Nhập</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center">
                                <div class=""><a href="@Url.Action("Register")" style="color:#003366; font-weight:600;">Chưa có tài khoản? Đăng kí ngay!</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
