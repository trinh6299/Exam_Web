@model List<Exam_Web_Core.ViewModels.ListResult_Model>
@{
    ViewBag.Title = "ListResult";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10 d-flex justify-content-center h4 mt-2 text-primary">
            BẢNG ĐIỂM
        </div>
        <div class="col-12 d-flex justify-content-center h5 mt-2 text-primary font-italic font-weight-bold">
            @ViewBag.TenHS
        </div>
        <div>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>STT</th>
                    <th>Môn Thi</th>
                    <th>Tên Đề Thi</th>
                    <th>Loại Đề Thi</th>
                    <th>Lần Thi</th>
                    <th>Thời Gian Làm</th>
                    <th>Thời Gian Nộp</th>
                    <th>Điểm</th>
                </tr>
                @{
                    int rowCount = 0;
                    for (int i = 0; i < Model.Count; i++)
                    {
                        rowCount++;
                        <tr>
                            <td>@rowCount</td>
                            <td>@Model[i].MonHoc</td>
                            <td>@Model[i].TenDeThi</td>
                            <td>@Model[i].LoaiDe</td>
                            <td>@Model[i].LanThi</td>
                            <td>@Model[i].ThoiGianLamBai</td>
                            <td>@Model[i].ThoiGianNopBai</td>
                            <td>@Model[i].Diem</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>

