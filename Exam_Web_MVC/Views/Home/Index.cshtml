        <div class="col-12 d-flex">
            <div class="h3 text-primary pl-2 mt-2 text-success">Môn Toán</div> @*id=1*@
        </div>
        @{
            int count = 0;
            foreach (var item in Model)
            {
                if (item.MonHocID == 1)
                {
                    count++;
                    if (count == offset)
                    {
                        break;
                    }
                    <div class="box-header ml-1">
                        <div class="col-12 p-1 d-flex">
                            <div class="col-9 col-md-10 p-1 pull-left fz-4">
                                <a class="text-dark" href="@Url.Action("DetailExam","Exam",new { id=item.DeThiID})" style="font-size: 22px"> @item.TenDeThi </a>
                                @{
                                    if (count == 1)
                                    {
                                        <img src="~/Assets/User/gif/flash_new.gif" alt="" sizes="" srcset="" style="width: 32px;">
                                    }
                                }
                                <div class="d-flex mt-3">
                                    <div class="mr-3 p-1">
                                        <i class="fa fa-book" aria-hidden="true"></i>
                                        <span>@item.CauHois.Count Câu Hỏi </span>
                                    </div>
                                    <div class="mr-3 p-1">
                                        <i class="far fa-clock" aria-hidden="true"></i>
                                        <span>@item.ThoiGianLamBai Phút</span>
                                    </div>
                                    <div class="mr-3 p-1">
                                        <i class="far fa-file-alt" aria-hidden="true"></i>
                                        <span>@item.LoaiDe</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3 col-md-2 p-1 pull-right text-right">
                                <span class="pb-0">
                                    <a class="btn btn-primary mt-4" style="font-size: 18px;" href="@Url.Action("DetailExam","Exam",new { id=item.DeThiID})"> Làm bài </a> &nbsp;
                                </span>
                            </div>
                        </div>
                    </div>
                    <hr />
                }
            }
        }
