@using Exam_Web_Core.ViewModels
@model HocSinh_TaiKhoan_Model
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Đăng Ký</title>
    <link href="~/Assets/admin/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
    <style>
        * {
            font-family: sans-serif;
        }
    </style>
</head>
<body style="background-image:url(../../Assets/Admin/images/login_background.jpg);">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5" style="background-color: rgba(255,255,255,0.7)">
                                <div class="card-header" style="background-color:transparent;"><h3 class="text-center font-weight-light my-1" style="color:#003366; "><i class="fas fa-book"></i> ĐĂNG KÍ TÀI KHOẢN</h3></div>
                                <div class="card-body" style="background-color:transparent;">
                                    <form method="post">
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="mb-1" for="inputFirstName" style="font-weight:600; color:#003366;">Họ Và Tên</label>
                                                    <input class="form-control py-4" id="inputFirstName" type="text" placeholder="Họ và tên" name="TenHS" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class=" mb-1" for="inputLastName" style="font-weight:600; color:#003366;">Ngày Sinh</label>
                                                    <input class="form-control py-4" id="inputLastName" type="date" name="NgaySinh" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class=" mb-1" for="inputEmailAddress" style="font-weight:600; color:#003366;">Email</label>
                                            <input class="form-control py-4" id="inputEmailAddress" type="email" aria-describedby="emailHelp" placeholder="Nhập email của bạn" name="Email" />
                                        </div>
                                        <div class="form-group">
                                            <label class=" mb-1" style="font-weight:600; color:#003366;">Giới Tính</label>
                                            <select class="form-control" name="GioiTinh">
                                                <option value="true">Nam</option>
                                                <option value="false">Nữ</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label class=" mb-1" for="inputEmailAddress" style="font-weight:600; color:#003366;">Tên Đăng Nhập</label>
                                            <input class="form-control py-4" id="inputEmailAddress" aria-describedby="emailHelp" placeholder="Tên đăng nhập" name="UserName" />
                                        </div>
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class=" mb-1" for="inputPassword" style="font-weight:600; color:#003366;">Mật Khẩu</label>
                                                    <input class="form-control py-4" id="inputPassword" type="password" placeholder="Nhập mật khẩu" name="Password" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class=" mb-1" for="inputConfirmPassword" style="font-weight:600; color:#003366;">Xác Nhận Mật Khẩu</label>
                                                    <input class="form-control py-4" id="inputConfirmPassword" type="password" placeholder="Xác nhận mật khẩu" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mt-4 mb-0"><button class="btn btn-primary btn-block" type="submit" style="background-color:#004080; color:white;">Tạo Tài Khoản</button></div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class=""><a href="@Url.Action("Login")" style="color:#003366; font-weight:600;">Bạn đã có tài khoản? Đăng nhập ngay!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html>